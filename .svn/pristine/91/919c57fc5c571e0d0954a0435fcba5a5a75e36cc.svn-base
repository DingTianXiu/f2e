
.table-box{width: 100%;line-height: 45px;min-width: 1000px;font-size: 14px;}
.table-le{float: left;width:83%;overflow-x:scroll;position: absolute;
left: 0px;
   
    right: 170px;}
.table-le table{width:120%;border-top: 1px solid #e5e5e5;}
.table-ri{float: right;border: 1px solid #E5E5E5;width:16.6%;position: absolute;
    right: 0px;
    display: block;}

.table-box table thead tr th {background: #fafafa;color: #82959d;border-right: 1px solid #E5E5E5;}
.table-box table tbody tr td {color: #82959d;border-right: 1px solid #fff;}
.table-box table tr{border-bottom: 1px solid #E5E5E5;position: relative;}
.table-box table tr th,.table-box table tr td{width: 169px;height: 45px;text-align: center;}
.table-box table tbody tr:hover{background-color:#f1f9fd;color: #008CE0;}
.div-re{position: relative;cursor: pointer;}
.ul-ab{position: absolute;top:40px;left:28px;background-color: #fff;line-height: 34px;border: 1px solid #E5E5E5;width: 100px;text-align: center;}
.ul-ab li{border-bottom: 1px dashed #E5E5E5;cursor: pointer;}
.ul-ab li:last-child{border-bottom:none;}
/*.table-box table thead tr  .hover-bg {display: inline-block;}*/
.table-box table thead tr  .hover-bg a{display: inline-block;margin-left: 2px;}
.table-box table thead tr  .hover-bg a:hover{display: inline-block;width:100%;background: url(../images/222.png) no-repeat 100px center;}

.th-re{position: relative;}
.divth-ab{background: #008ce0;position: absolute;width: 169px;
    top:0px;left: 0px;color: #fff;}
.divth-ab a{display: inline-block;width: 50px;border-right: 1px solid #76b3d6;height: 30px;line-height: 30px;cursor: pointer;}
.divth-ab a:last-child{border-right:none;}
.apiBack{line-height: 40px;
    text-indent: 18px;color: #D2D2D2;}
.apiBack a{color:#0066FF;cursor: pointer;}
 .table-box table tr .alert{display: inline-block;vertical-align: middle;cursor: pointer;}
.table-box table tr .absoluP{
    position: absolute;
    top: 56px;left:415px;background-color: #FFFFFF;line-height: 24px;padding: 0px 6px; box-shadow: 1px 1px 1px #E5E5E5;z-index: 99999;}
 
.divth-ab a:last-child{border-right:none;}


/*步骤*/
.createApi-step{
    background: #f6f6f6;
    padding: 25px 25px;
}
.createApi-step li{
    float: left;
    overflow: hidden;
    opacity: 0.3
}
.createApi-step li h3{
    border: 2px solid #303641;
    width: 30px;
    height: 30px;
    border-radius: 30px;
    text-align: center;
    font-size: 25px;
    line-height: 25px;
    display: inline-block;
    vertical-align: top;
    font-weight: bolder;
}
.createApi-step li div{
    display: inline-block;
    margin-top: 5px;
    margin-left: 5px;
}
.createApi-step li div p{
    line-height: 25px;
    height: 25px;
    font-size: 14px;
}
.createApi-step li:nth-child(2),.createApi-step li:nth-child(4),.createApi-step li:nth-child(6),.createApi-step li:nth-child(8){
    padding: 0px 20px;
    height: 52px;
    font-size: 24px;
    line-height: 36px;
}
.createApi-step .on{
    opacity: 1;
}