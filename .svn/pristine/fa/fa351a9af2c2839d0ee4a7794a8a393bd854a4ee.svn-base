<div class="high_search_no x-m" style="height: 430px" id="tagRoleConfigModify" ng-controller="tagRoleConfigModifyCtrl">
  <form name="typeLabelForm" novalidate>
    <table class="mx-table">
      <tr>
        <th width=130>
          角色英文名
        </th>
        <td>
          {{option.code}}
        </td>
      </tr>
      <tr>
        <th width=130>
          角色中文名<span class="color-red">*</span>
        </th>
        <td>
          <input type="text" ng-model="option.name" class="mx-text" name="name" required ng-maxlength="20" />
          <span ng-show="(typeLabelForm.name.$dirty || submited) && typeLabelForm.name.$error.required" class="color-red">资源中文名为必填项</span>
          <span ng-show="(typeLabelForm.name.$dirty || submited) && typeLabelForm.name.$error.maxlength" class="color-red">资源中文名最大长度为20</span>
        </td>
      </tr>
      <tr>
        <th width=130>
          父节点<span class="color-red">*</span>
        </th>
        <td>
          <my-ligerui-combo-box ng-model="comboBoxOption" root-text="角色" combo-box-id="createSelectRole" />
        </td>
      </tr>
      <tr>
        <th width=130>
          状态
        </th>
        <td>
          <select name="status" id="status" class="x-m-select" ng-model="option.status" ng-options="m.id as m.name for m in statusSelect"></select>
        </td>
      </tr>
      <tr>
        <th width=130>
          说明
        </th>
        <td>
          <textarea name="" id="" cols="30" class="mx-text" style="height:80px;" rows="10" ng-model="option.comment"></textarea>
        </td>
      </tr>
      <tr>
        <th width=130>
        </th>
        <td class="submit fr">
          <a href="javascript:;" class="a1" ng-click="formatOpen()">确定</a><a href="javascript:;" class="a2" ng-click="closeOpen()">取消</a>
        </td>
      </tr>
    </table>


  </form>
</div>
